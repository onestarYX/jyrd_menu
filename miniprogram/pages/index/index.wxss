/**index.wxss**/
.container {
  background-color: lightgoldenrodyellow;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.title {
  background-color: orange;
  padding: 10rpx;
  display: flex;
  align-items: center;
  height: 12%;
}

#testNav {
  background-color: lightblue;
  width: 220rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.menu {
  display: flex;
  flex-direction: row;
  height: 76%;
  width: 100%;
}

.categoryList {
  flex: 1;
  height: 100%;
  background-color: yellow;
  border: 1px solid rgba(0, 0, 0, 0.1);
}


.categoryCell {
  padding-left: 10rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background-color: aqua;
}

.hover {
  background-color: gray;
}


.menuTable {
  flex: 4;
  height: 100%;
  background-color: deeppink;
}

.menuCell {
  background: lightcyan;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  height: 140rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.avatar {
  flex: 1;
  margin-right: 10rpx;
  width: 140rpx;
  height: 140rpx;
}

.itemDetailPanel {
  flex: 4;
  background-color: bisque;
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.addAmountPanel {
  flex: 1;
  background-color: aqua;
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
  height: 80rpx;
}

#decNumBtn {
  background-color: rosybrown;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

#addNumBtn {
  background-color: rosybrown;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

#amount {
  background-color: red;
  padding-top: 16rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 50rpx;
}

.dishName {
  margin-bottom: 40rpx;
}

.dishPrice {
  font-size: 120%;
}


.shadow {
  background-color: black;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  opacity: 0.5;
}

.cartItemList {
  background-color: white;
  width: 100%;
  height: 50%;
  position: fixed;
  bottom: 12%;
  z-index: 2;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding-top: 30rpx;
}


.cartScrollView {
  height: 100%;
  
}

.cartPanel {
  background-color: salmon;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 12%;
  padding-left: 50rpx;
  z-index: 1;
}

#cost {
  font-size: x-large;
  background-color: darkorange;
  flex: 3;
}

#payBtn {
  background-color: greenyellow;
  padding-left: 20rpx;
  padding-right: 20rpx;
  flex: 1.3;
}

#cart {
  background-color: gainsboro;
  padding-left: 10rpx;
  padding-right: 10rpx;
  flex: 1;
}





















.testButton2 {
  background-color: blue;
  width: 20rpx;
}

.testView {
  background-color: yellow;
}

.testView button {
  width: 30rpx;
  background-color: red;
}

.testView #id {
  width: 30rpx;
  background-color: black;
}

.testView .testButton {
  width: 30rpx;
  background-color: blue;
}

.testButton {
  background-color: yellowgreen;
  width: 300rpx;
}